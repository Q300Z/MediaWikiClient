<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediaWikiClient.WebViewPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Ouvrir dans mon navigateur" Clicked="Button_OnClicked"
                    HorizontalOptions="Fill" BackgroundColor="White" TextColor="Black" />
            <WebView x:Name="WebView" HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>